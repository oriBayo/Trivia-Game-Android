<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.triviagame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TriviaGame">

        <activity
            android:name=".Views.WonActivity"
            android:exported="true" />
        <activity
            android:name=".Views.TableScoreActivity"
            android:exported="true" />
        <activity
            android:name=".Views.TimesUpActivity"
            android:exported="true" />
        <activity
            android:name=".Views.GameActivity"
            android:exported="true"
            android:parentActivityName=".Views.MenuActivity" />
        <activity
            android:name=".Views.MenuActivity"
            android:exported="true" />
        <activity
            android:name=".Views.LoginActivity"
            android:exported="true"
            android:parentActivityName=".Views.StartActivity" />
        <activity
            android:name=".Views.RegisterActivity"
            android:exported="true"
            android:parentActivityName=".Views.StartActivity" />
        <activity
            android:name=".Views.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Preference">
        </activity>
    </application>

</manifest>