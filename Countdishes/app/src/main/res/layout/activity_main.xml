<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="@string/please_chose_language"
        android:textSize="25sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_rus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:layout_marginTop="20dp"
        android:text="русский"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_ar"
        tools:ignore="MissingConstraints" />



    <Button
        android:id="@+id/button_ar"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:text="عربيه"
        app:layout_constraintTop_toBottomOf="@+id/button_he"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="81dp" />

    <Button
        android:id="@+id/button_he"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="עברית"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        app:layout_constraintTop_toBottomOf="@+id/button_en"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="81dp" />

    <Button
        android:id="@+id/button_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:text="English"

        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>